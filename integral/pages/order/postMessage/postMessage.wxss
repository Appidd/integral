.post-message {
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 30rpx;
    position: relative;
}

.post-code-info,.post-message {
    display: flex;
    width: 100%;
}

.post-code-info {
    align-items: flex-end;
    background-color: #fff;
    border-bottom-left-radius: 35rpx;
    border-bottom-right-radius: 35rpx;
    justify-content: space-between;
}

.post-person-name {
    align-items: center;
    display: flex;
    margin-bottom: 30rpx;
    margin-top: 50rpx;
}

.post-person-name-bold {
    font-weight: 700;
    margin-left: 119rpx;
}

.post-code-detail {
    color: #000;
    flex-direction: column;
    font-size: 25rpx;
    margin-left: 50rpx;
}

.code-number,.post-code-detail {
    display: flex;
}

.code-number {
    align-items: center;
    margin-bottom: 54rpx;
}

.code-number-num {
    font-weight: 700;
    margin-left: 93rpx;
}

.copy {
    align-items: flex-end;
    color: var(--color-theme);
    color: #df3d4b;
    display: flex;
    font-size: 25rpx;
    height: 100%;
    margin-bottom: 54rpx;
    margin-right: 52rpx;
}

.post-progress {
    align-items: center;
    border-radius: 12rpx;
    margin-top: 52rpx;
    width: 95%;
}

.post-progress,.post-progress-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.post-progress-item {
    color: #6e7189;
    margin-bottom: 20rpx;
    width: 90%;
}

.post-progress-item-active {
    color: #df3d4b;
}

.post-status {
    align-items: center;
    display: flex;
    position: relative;
    width: 100%;
}

.status-icon {
    height: 30rpx;
    left: 0;
    top: 0;
    transform: translateX(-50%);
    width: 30rpx;
}

.in_set,.status-icon {
    border-radius: 50%;
    position: absolute;
    text-align: center;
}

.in_set {
    background-color: #afb0be;
    height: 20rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 20rpx;
    z-index: 999;
}

.status {
    font-size: 25rpx;
    margin-left: 50rpx;
}

.post-info {
    border-left: 1rpx dashed #afb0be;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 40rpx;
    padding-bottom: 10rpx;
    padding-left: 50rpx;
    padding-top: 5rpx;
    width: 90%;
}

.has_border {
    border: 1rpx solid #e97781;
}

.status_isActive {
    background-color: #df3d4b;
}

.no-dots {
    border: none;
    padding: 15rpx 44rpx;
}

.post-text {
    font-size: 20rpx;
    margin-bottom: 13rpx;
}

.post-date {
    border-bottom: 1rpx solid #afb0be;
    font-size: 17rpx;
    padding-bottom: 21rpx;
}

.contact {
    align-items: center;
    display: flex;
    justify-content: flex-end;
    margin-bottom: 108rpx;
    margin-top: 30rpx;
    width: 80%;
}

.contact_btn {
    background: transparent;
    border: 1rpx solid #df3d4b;
    border-radius: 30rpx;
    color: #df3d4b;
    font-weight: 0;
    margin: 0 0 0 31rpx;
    padding: 0;
    text-align: center;
}