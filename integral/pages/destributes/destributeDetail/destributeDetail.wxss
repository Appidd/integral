.destribute_detail {
    align-items: center;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.detribute_card {
    display: flex;
    justify-items: center;
    margin-top: 209rpx;
    position: relative;
    width: 487rpx;
}

.detribute_card_background {
    height: 100%;
    position: absolute;
    top: 0;
    width: 100%;
}

.detribute_card_content {
    align-items: center;
    color: #fff;
    display: flex;
    flex-direction: column;
    width: 100%;
    z-index: 500;
}

.describute_code {
    font-size: 25rpx;
    margin-top: 44rpx;
    text-align: center;
    width: 100%;
}

.bar-code {
    margin-top: 26rpx;
}

.qr-code {
    margin-top: 55rpx;
}

.line {
    border-bottom: 1rpx dashed #bfbfbf;
    height: 1rpx;
    margin-top: 70rpx;
    width: 376rpx;
}

.describute_message {
    align-items: center;
    margin-bottom: 65rpx;
    margin-top: 50rpx;
    width: 100%;
}

.describute_left,.describute_message {
    display: flex;
    justify-content: space-between;
}

.describute_left {
    flex-direction: column;
    margin-left: 45rpx;
}

.price {
    align-items: flex-end;
    display: flex;
    font-size: 24rpx;
    justify-content: center;
}

.price_number {
    font-size: 75rpx;
}

.limite {
    font-size: 25rpx;
    text-align: center;
}

.describute_right {
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: flex-end;
    margin-right: 45rpx;
}

.name {
    font-size: 25rpx;
    font-weight: 700;
    width: 223rpx;
}

.destribute_time {
    font-size: 17rpx;
    margin-top: 27rpx;
}

.regular {
    background: #afb0be;
    flex-direction: column;
    margin-bottom: 6rpx;
    width: 474rpx;
}

.regular,.regular_top {
    align-items: center;
    display: flex;
}

.regular_top {
    height: 50rpx;
    justify-content: space-between;
    width: 95%;
}

.regular_title {
    color: #313457;
    font-size: 17rpx;
}

.regular_detail {
    border-top: 1rpx solid #5e6188;
    color: #313457;
    font-size: 17rpx;
    padding: 10rpx 0;
    width: 95%;
}

.logo {
    margin-bottom: 132rpx;
    margin-top: 141rpx;
    width: 151rpx;
}